/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 5rpx;
}

.userinfo-avatar {
  width: 96rpx;
  height: 96rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.usermotto {
  margin-top: 200px;
}

.page__bd{
	padding:0 10rpx;
}

.line{
  width:100%;
  height:2rpx;
  background:#aaa;
}

.section__nav{
	display:flex;
	height:100px;
	margin-bottom:10rpx;
  margin-top:10rpx;
}

.left{
	width:33.33%;
  display:flex;
	justify-content:center;
	align-items:center;
	box-sizing:border-box;
}

.right{
  width:66.67%;
  flex-wrap:wrap;
  display:flex;
	justify-content:flex-end;
	align-items:center;
}

.qc-scan{
  height: 100rpx;
  width:100rpx;
  margin-right: 20rpx;
}

.camera-button{
  width:50%;
  flex-wrap:wrap;
  display:flex;
	justify-content:center;
	align-items:center;
  background-color:aquamarine;
}

.camera{
  position: fixed;
  bottom: 10rpx;
  width: 100%;
}

.image-view{
  display:flex;
	height:150px;
  align-items: center;
  justify-content: center;
	margin-bottom:10rpx;
  margin-top:10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.image-show{
  height: 300rpx;
  width:300rpx;
  background-color: lightgray;
  margin-left: 10rpx;
  margin-right: 10rpx;
}